<div class="container">
  
  <div id="user_top">  
    <div id="user_photo">
      <%= image_tag @user.avatar.url(:thumb)%>
      <h1>STEM Skills</h1>
    </div>
    <div id="user_details">
      <ul>
        <li class="name"><%= @user.first_name %> <%= @user.last_name %></li>
        <li class="company"><%= @user.school_company %></li>
        <li class="twitter"><%= @user.twitter %></li>
      </ul>
      <p><%= @user.bio %></p>  
    </div>
  </div>
</div>

<% if @user.part_type == "youth" %>
  <div id="youth_list"> 
    <div class="container">
      <% @youth.each do |y| %>
        <%= link_to image_tag(y.avatar.url(:thumb)), :controller => "search", :action => "show", :id => y.id %>
      <% end %>
      <div class="user_link">
        <p>Meet all the students</p>
        <h1>></h1>
      </div>
    </div>
  </div>
<% else %>
  <div id="mentor_list">
    <div class="container">
      <% @mentors.each do |m| %>
        <%= link_to image_tag(m.avatar.url(:thumb)), :controller => "search", :action => "show", :id => m.id %>
      <% end %>
      <div class="user_link">
        <p>Meet all the mentors</p>
        <h1>></h1>
      </div> 
    </div>    
  </div>
<% end %>
