<div class="signup">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <%= text_field_tag "user[email]", "Email address", "data-original-text" => "Email address", :class => "auto-replace" %>

    <%= password_field_tag "user[password]", "password", "data-original-text" => "password", :class => "auto-replace" %>

    <% if devise_mapping.rememberable? -%>
      <div class="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>