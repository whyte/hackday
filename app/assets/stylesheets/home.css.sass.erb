@import "general"

#header_text
  margin-top: 0px
  padding-top: 15px
  p
    font-size: 26px
    font-weight: 100
    line-height: 170%
    text-shadow: 0px 2px 3px rgba(0, 0, 0, 0.7)
  
  p.no_shadow
    text-shadow: none
    
    b
      font-weight: 600
            
#star_container 
  display: block
  height: 100px
  margin-top: 100px 
  margin-bottom: 50px
  
.stars
  float: left
  display: inline
  margin-right: 25px

.star_links
  float: left
  width: 250px
  margin-top: 10px
  div
    display: inline
  ul
    display: inline
    list-style: none
    width: 200px
    padding: 0px
    margin: 0px
    font-size: 16px
    font-weight: 600
    li.light
      font-weight: 100
    
#youth_list
  height: 201px
  background: white
  width: 1000px
  margin: 0px auto
  img
    padding: 0px
    margin: 0px
    float: left
      
#mentor_list
  height: 200px
  img
    padding: 0px
    margin: 0px
    float: left
      
.user_link
  display: block
  color: white
  height: 200px
  width: 200px
  margin-left: 800px
  padding: 0px
  background: url('../assets/gdh-chevron.png') no-repeat
  background-position: 160px 150px
  cursor: pointer
  cursor: hand
  
  p
    padding-top: 20px
    padding-left: 20px
    margin: 0px
    font-family: $HN
    font-size: 20px
    font-weight: 500
  h1
    float: right
    margin: 0px
    font-family: $H
    font-size: 50px
    font-weight: 100 
    
#mentor_link
  background-color: $blue

#youth_link
  background-color: $red

#bottom_bar
  background-color: $blue
  height: 50px

#schedule
  margin-bottom: 50px
  table 
    width: 1000px
    font-size: 20px
    td
      padding: 5px
    .time
      font-weight: bold
      
#map
  a
    color: black
  a:hover
    color: $blue

#sponsorship
  h1
    font-size: 24px
  a
    color: $blue
  a:hover
    color: $blue
  ul
    margin-bottom: 60px   
    padding: 0px

#options
  font-size: 24px
  li
    list-style-type: none
    padding-top: 20px

#contact
  font-size: 18px
  li
    list-style-type: none

#contact_us
  font-size: 18px
  float: left
  width: 500px
  height: 200px
  margin-top: 50px
  margin-bottom: 100px
  ul
    display: inline
    width: 300px
  li
    display: inline-block
    width: 300px
    padding: 10px 10px 10px 0px
    list-style-type: none
  .header
    font-size: 24px

.circle_contact
  float: left
  display: inline
  margin-left: 10px
  margin-right: 30px
  z-index: 100
  height: 150px
  width: 150px 
  -webkit-border-radius: 75px
  -moz-border-radius: 75px
  border-radius: 75px
  box-shadow: 0px 0px 0px 6px #00B1B3
  img
    width: 150px
    height: 150px
    z-index: 0
    opacity: 100
    -webkit-border-radius: 75px
    -moz-border-radius: 75px
    border-radius: 75px
    vertical-align: bottom

    
.header
  font-weight: bold

#all_mentors
  height: 201px
  img
    width: 198px
    padding: 0px 0px 1px 0px 
    margin: 0px
    float: left

#speaker_details
  display: inline
  float: left
  width: 750px
  ul
    list-style: none
    .name
      font-size: 34px
      font-weight: 900
    .company
      font-size: 28px
      font-weight: 200
      a 
        color: $blue
    .twitter
      font-size: 20px
      font-weight: 600
      a 
        color: $blue
  p
    margin-top: 0px
    margin-left: 40px
    font-size: 20px
  p.first
    margin-top: 140px
  p.last
    margin-bottom: 50px
