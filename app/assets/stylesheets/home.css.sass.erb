@import "general"
@import "modal"

#header_text
  margin-top: 0px
  padding-top: 50px
  p
    font-size: 26px
    font-weight: 100
    line-height: 170%
    b
      font-weight: 600
            
#star_container 
  display: block
  height: 100px
  margin-top: 100px 
  margin-bottom: 50px
  
.stars
  float: left
  display: inline
  margin-right: 25px

.star_links
  float: left
  width: 250px
  margin-top: 10px
  div
    display: inline
  ul
    display: inline
    list-style: none
    width: 200px
    padding: 0px
    margin: 0px
    font-size: 16px
    font-weight: 600
    li.light
      font-weight: 100
    
#youth_list
  background-color: $red
  min-width: 1200px
  height: 200px
  border-bottom: solid white 1px
  img
    padding: 0px
    margin: 0px
    float: left
      
#mentor_list
  background-color: $blue
  height: 200px
  img
    padding: 0px
    margin: 0px
    float: left

#sponsor_list
  height: 200px
  color: $gray
  font-weight: 500
  padding-top: 80px
  ul
    display: inline
    list-style: none
    padding: 0px
    margin: 0px
    li
      display: inline
      img
        margin-left: 20px
      
.user_link
  display: block
  color: white
  height: 200px
  width: 200px
  margin-left: 1000px
  padding: 0px
  p
    padding-top: 20px
    padding-left: 20px
    margin: 0px
    font-family: $HN
    font-size: 20px
    font-weight: 500
  h1
    float: right
    margin: 0px
    font-family: $H
    font-size: 50px
    font-weight: 100 



