@import "general"

#header_text
  margin-top: 0px
  padding-top: 50px
  p
    font-size: 26px
    font-weight: 100
    line-height: 170%
    b
      font-weight: 600
            
#star_container 
  display: block
  height: 100px
  margin-top: 100px 
  margin-bottom: 50px
  
.stars
  float: left
  display: inline
  margin-right: 25px

.star_links
  float: left
  width: 250px
  margin-top: 10px
  div
    display: inline
  ul
    display: inline
    list-style: none
    width: 200px
    padding: 0px
    margin: 0px
    font-size: 16px
    font-weight: 600
    li.light
      font-weight: 100
    
#youth_list
  background-color: $red
  height: 200px
  border-bottom: solid white 1px
  img
    padding: 0px
    margin: 0px
    float: left
      
#mentor_list
  background-color: $blue
  height: 200px
  img
    padding: 0px
    margin: 0px
    float: left
      
.user_link
  display: block
  color: white
  height: 200px
  width: 200px
  margin-left: 1200px
  padding: 0px
  p
    padding-top: 20px
    padding-left: 20px
    margin: 0px
    font-family: $HN
    font-size: 20px
    font-weight: 500
  h1
    float: right
    margin: 0px
    font-family: $H
    font-size: 50px
    font-weight: 100 

#bottom_bar
  background-color: $blue
  height: 50px

#schedule
  margin-bottom: 50px
  table 
    width: 1000px
    font-size: 20px
    td
      padding: 5px
    .time
      font-weight: bold
      
#map
  a
    color: black
  a:hover
    color: $blue


#sponsorship
  a
    color: black
  a:hover
    color: $blue

#options
  font-size: 24px
  li
    list-style-type: none
    padding-top: 20px

#contact
  font-size: 24px
  li
    list-style-type: none
    
.header
  font-weight: bold


