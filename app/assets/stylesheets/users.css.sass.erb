@import "general"

/* new */

.signup
  width: 700px
  margin: 20px auto 0px auto
  background: white
  -webkit-border-radius: 8px
  -moz-border-radius: 8px
  border-radius: 8px
  padding: 20px 

  h2
    font: $H
    line-height: 20px
    padding: 0px
    margin: 0px
 
  form
    padding: 10px 0px
    
    input
      display: block
      width: 300px
      height: 30px
      margin-bottom: 10px
      font-size: 15px
      padding: 5px
      
      &[type=submit]
        width: 150px
      
    .remember
      input
        display: inline
        width: 20px
        margin: 0px
      
      label
        vertical-align: top
        line-height: 30px
        
        
      
.form
  margin: 0px
  border: none
  color: grey
  font:
    size: 16px
.form:hover
  color: black
.large
  height: 300px
.medium
  height: 150px
.small
  height: 20px
  
#form_list
  list-style: none
  li
    margin-top: 10px

/* crop */
    
#cropbox_box
  margin: 20px
  display: inline
  float: left

#preview_box
  margin: 20px
  display: inline
  float: left
  width: 100px
  height: 100px
  overflow: hidden
  border: 10px solid $blue
  border-radius: 50%
  width: 100px
  height: 100px
  
#crop_button  
  display: inline
  float: left 
  
/* show */
  
#user_top
  margin-top: 100px
  
#user_photo
  display: inline
  float: left
  width: 300px
  height: 300px
  img
    border: 10px solid $blue
    border-radius: 50%
    width: 200px
    height: 200px

#user_details
  display: inline
  float: left
  width: 700px
  height: 300px
  ul
    list-style: none
    .name
      font-size: 34px
      font-weight: 900
    .company
      font-size: 28px
      font-weight: 200
    .twitter
      font-size: 20px
      font-weight: 600
      color: $blue
      

#user_left
  display: inline
  float: left
  width: 300px
  h1
    color: $blue
  
#user_right
  display: inline
  float: left
  width: 700px


  