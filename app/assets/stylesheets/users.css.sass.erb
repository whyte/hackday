@import "general"

/* new */

.signup
  width: 1000px
  margin: 20px auto 0px auto
  background: white
  -webkit-border-radius: 8px
  -moz-border-radius: 8px
  border-radius: 8px
  padding: 20px 

  h2
    font: $H
    line-height: 20px
    padding: 0px
    margin: 0px
 
  form
    padding: 10px 0px
    
    label
      font-weight: bold
      padding-right: 10px
    
    input, textarea
      display: block
      width: 300px
      height: 30px
      margin-bottom: 10px
      font-size: 15px
      padding: 5px
      
      &[type=submit]
        width: 150px
        
      &[type=file]
        display: inline
    
    textarea
      min-height: 200px
    .remember
      input
        display: inline
        width: 20px
        margin: 0px
      
      label
        vertical-align: top
        line-height: 30px
        
        
      
.form
  margin: 0px
  border: none
  color: grey
  font:
    size: 16px
.form:hover
  color: black
.large
  height: 300px
.medium
  height: 150px
.small
  height: 20px
  
#form_list
  list-style: none
  li
    margin-top: 10px

/* crop */
    
#cropbox_box
  margin: 20px
  display: inline
  float: left

#preview_box
  margin: 20px
  display: inline
  float: left
  width: 100px
  height: 100px
  overflow: hidden
  border: 10px solid $blue
  border-radius: 50%
  width: 100px
  height: 100px
  
#crop_button  
  display: inline
  float: left 

#skill_listing
  list-style: none
  height: 300px
  margin-top: 20px
  padding: 0px
  li
    float: left
    font-size: 20px
    width: 150px
    height: 45px
    border: #E5E4E2 solid 1px
    padding: 5px
    margin: 0px
  
.add_skills
  h3
    margin-top: 20px
  
.add_skill
  background-color: $blue

.hover_skill
  background-color: $blue
  
.button_div  
  margin-top: 40px
  
  
  
  