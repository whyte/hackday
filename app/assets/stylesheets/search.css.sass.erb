@import "general"

/* show */
  
#user_top
  margin-top: 100px
  
#user_photo
  display: inline
  float: left
  width: 300px
  height: 300px
  img
    border: 10px solid $blue
    border-radius: 50%
    width: 200px
    height: 200px

#user_details
  display: inline
  float: left
  width: 700px
  height: 300px
  ul
    list-style: none
    .name
      font-size: 34px
      font-weight: 900
    .company
      font-size: 28px
      font-weight: 200
    .twitter
      font-size: 20px
      font-weight: 600
      color: $blue
      

#user_left
  display: inline
  float: left
  width: 300px
  h1
    color: $blue
  
#user_right
  display: inline
  float: left
  width: 700px