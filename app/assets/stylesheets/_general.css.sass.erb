/* Grid */
$min_width: 1000px

/* Colours */
$blue: #00b1b3
$red: #e6002b
$green: #a1cf00
$gray: #ACACAC

/* Fonts */
$HN: 'Helvetica Neue'
$H: 'Helvetica'

/* Overall Website */
body
  margin: 0px
  padding: 0px
  min-width: $min_width
  background-image: url('pw_maze_white.png')
  font-family: $H
  font-weight: 100
  color: black
  a
    color: white
    text-decoration: none
  
#page

.container
  width: $min_width
  margin: 
    top: 0px
    bottom: 0px 
    left: auto
    right: auto
  overflow: hidden

#background_image_top
  color: white
  width: 100%
  height: 131px
  background-image: url('gdh-top.jpg') 
  background-size: cover  

#background_image_bottom
  color: white
  width: 100%
  height: 269px
  background-image: url('gdh-top.jpg')
  background-position: 0px -131px
  background-repeat: no-repeat 
  background-size: cover

#logo
  h1
    font-size: 40px
    font-weight: 100
    b
      font-weight: 900
  
#top_bar
  margin-top: 40px
  padding-bottom: 40px
  border-bottom: #26a0a1 solid 1px
  div
    display: inline
  h1
    display: inline
  ul
    display: inline
  li
    display: inline
    list-style-type: none
    font-weight: 600
    margin-right: 20px
  
#logo
  width: 350px
  margin-right: 20px

#menu_bar
  width: 500px
  
#twitter_logo
  width: 50px
  float: right
  img
    width: 40px

  