/* Grid */
$min_width: 1000px

/* Colours */
$blue: #00b1b3
$red: #e6002b
$green: #a1cf00
$gray: #ACACAC

/* Fonts */
$HN: 'Helvetica Neue'
$H: 'Helvetica'

/* Overall Website */
body
  margin: 0px
  padding: 0px
  min-width: $min_width
  background-image: url('pw_maze_white.png')
  font-family: $H
  font-weight: 100
  color: black
  a
    color: white
    text-decoration: none
  p
    font-size: 17px
    line-height: 28px
  
#page

.container
  width: $min_width
  margin: 
    top: 0px
    bottom: 0px 
    left: auto
    right: auto
  overflow: hidden

#background_image_top
  color: white
  width: 100%
  height: 127px
  background-image: url('gdh-top.jpg') 
  background-size: cover  

#background_image_bottom
  color: white
  width: 100%
  height: 269px
  background-image: url('gdh-top.jpg')
  background-position: 0px -131px
  background-repeat: no-repeat 
  background-size: cover

#logo
  h1
    font-size: 40px
    font-weight: 100
    b
      font-weight: 900
  
#top_bar
  margin-top: 40px
  padding-bottom: 40px
  border-bottom: #26a0a1 solid 1px
  div
    display: inline
  h1
    display: inline
  ul
    display: inline
  li
    display: inline
    list-style-type: none
    font-weight: 600
    margin-right: 20px
    text-shadow: 0px 1px 2px rgba(0,0,0,.7)
  
#logo
  width: 350px
  margin-right: 20px

#menu_bar
  width: 500px
  
#twitter_logo
  width: 50px
  float: right
  img
    width: 40px

/* show */

#user_top
  margin-top: 100px
  height: 650px

#user_photo
  display: inline
  float: left
  width: 250px
  img
    border: 10px solid $blue
    border-radius: 50%
    width: 200px
    height: 200px
  h1
    color: $blue
    margin-left: 20px

#user_details
  display: inline
  float: left
  width: 750px
  ul
    list-style: none
    .name
      font-size: 34px
      font-weight: 900
    .company
      font-size: 28px
      font-weight: 200
    .twitter
      font-size: 20px
      font-weight: 600
      a 
        color: $blue
  p
    margin-top: 130px
    margin-left: 40px
    font-size: 20px

#sponsor_list
  height: 100px
  color: $gray
  font-weight: 500
  padding-top: 80px
  ul
    display: inline
    list-style: none
    padding: 0px
    margin: 0px
    li
      display: inline
      img
        margin-left: 20px
  
#accordion
  background-color: white
  h3
    font-size: 20px
    padding: 10px
  div
  
  
.orientation
  list-style: none
  padding: 0px
  margin: 0px 0px 20px 0px
  li
    padding: 5px 5px 5px 0px
  
  
  